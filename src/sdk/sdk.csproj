<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Zig.Tasks</AssemblyName>
        <BuildOutputTargetFolder>tools</BuildOutputTargetFolder>
        <NoWarn>$(NoWarn); NU5129</NoWarn>
        <NoWarn Condition="'$(TargetFramework)' == 'net472'">$(NoWarn); nullable</NoWarn>
        <PackageDescription>
$(Description)

This package contains the main SDK used to build Zig, C, and C++ projects.
        </PackageDescription>
        <PackageId>Zig.Sdk</PackageId>
        <PackageType>MSBuildSdk</PackageType>
        <RootNamespace>Zig.Tasks</RootNamespace>
        <TargetFrameworks>net6.0; net472</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="content/**"
                 Pack="true"
                 PackagePath="%(Identity)" />
        <None Include="build/**; Sdk/**"
              Pack="true"
              PackagePath="%(Identity)" />
    </ItemGroup>

    <ItemGroup>
        <Watch Include="build/**; content/**; Sdk/**" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Build.Tasks.Core" />
        <PackageReference Include="StyleCop.Analyzers"
                          PrivateAssets="all" />
    </ItemGroup>

    <!--
    This target writes some shared files into src/samples which ensure that all
    the sample projects will use the SDK package we just built.
    -->
    <Target Name="_WriteSharedFiles"
            DependsOnTargets="GetBuildVersion"
            AfterTargets="Build">
        <PropertyGroup>
            <_GlobalJson>
                <![CDATA[
{
  "$schema": "https://json.schemastore.org/global.json",
  "msbuild-sdks": {
    "Microsoft.Build.Traversal": "3.0.23",
    "Zig.Sdk": "$(Version)"
  }
}
                ]]>
            </_GlobalJson>
            <_NuGetConfig>
                <![CDATA[
<configuration>
    <config>
        <add key="globalPackagesFolder" value="$(PackageRestorePath)" />
    </config>
    <packageSources>
        <add key="zig-msbuild-sdk" value="$(PackageOutputPath)" />
    </packageSources>
</configuration>
                ]]>
            </_NuGetConfig>
        </PropertyGroup>

        <WriteLinesToFile File="../samples/global.json"
                          Lines="$(_GlobalJson)"
                          Overwrite="true"
                          WriteOnlyWhenDifferent="true" />
        <WriteLinesToFile File="../samples/nuget.config"
                          Lines="$(_NuGetConfig)"
                          Overwrite="true"
                          WriteOnlyWhenDifferent="true" />
    </Target>

    <!--
    This target removes the restored SDK package used by the sample project,
    thus ensuring that NuGet will not use a stale package because the version
    did not change.
    -->
    <Target Name="_ClearPackageCache"
            AfterTargets="Build">
        <ItemGroup>
            <_CachedFiles Include="$(PackageRestorePath)$(PackageId.ToLowerInvariant())/**" />
        </ItemGroup>

        <Delete Files="@(_CachedFiles)" />
    </Target>
</Project>
