<Project>
    <Target Name="_CheckFormat"
            Condition="'$(CompilerMode)' == 'Zig' and @(ZigSource->Count()) != 0">
        <ZigFormat FormatterMode="Check"
                   Sources="@(ZigSource)"
                   StandardOutputImportance="high"
                   ToolExe="$(ZigExePath)" />
    </Target>

    <Target Name="Format"
            Condition="'$(CompilerMode)' == 'Zig' and @(ZigSource->Count()) != 0">
        <ZigFormat FormatterMode="Execute"
                   Sources="@(ZigSource)"
                   ToolExe="$(ZigExePath)" />
    </Target>
</Project>
